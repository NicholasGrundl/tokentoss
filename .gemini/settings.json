{
  "hooksConfig": {
    "enabled": true
  },
  "hooks": {
    "AfterTool": [
      {
        "matcher": "write_file|replace|run_shell_command",
        "hooks": [
          {
            "type": "command",
            "command": "$GEMINI_PROJECT_DIR/.gemini/hooks/micro-commit.sh",
            "timeout": 10000
          }
        ]
      }
    ]
  }
}